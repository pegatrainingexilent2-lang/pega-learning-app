generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model TopicSection {
  id        String     @id
  title     String
  order     Int        @default(0)
  subTopics SubTopic[]
}

model SubTopic {
  id             String       @id
  title          String
  topicSectionId String
  topicSection   TopicSection @relation(fields: [topicSectionId], references: [id])
  order          Int          @default(0)
  introduction   String       @default("")
  explanation    String       @default("")
  implementation String       @default("")
  example        String       @default("")
  pptUrl         String?
}
